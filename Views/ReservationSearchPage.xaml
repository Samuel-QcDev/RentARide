<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RentARide.Views.ReservationSearchPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:model="clr-namespace:RentARide.Models"
    xmlns:viewmodel="clr-namespace:RentARide.ViewModel"
    Title="Reservation Search"
    x:DataType="viewmodel:ReservationSearchViewModel">
    <ScrollView>
        <VerticalStackLayout>

            <Grid
            Margin="10,10,0,0"
            Padding="5"
            ColumnDefinitions="*,*,*,*,*,*,*,*"
            ColumnSpacing="1"
            RowDefinitions="*,*,*,*"
            RowSpacing="5">

                <Label
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="0,5,0,5"
                FontSize="Medium"
                Text="Début : " />

                <DatePicker
                Date="{Binding ReservationSearchDetails.StartDate}"
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                BackgroundColor="LightGreen"
                FontSize="Medium"
                HorizontalOptions="Center" />

                <TimePicker
                Time="{Binding ReservationSearchDetails.StartTime}"
                Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                Margin="0,0,0,0"
                FontSize="Medium"
                HorizontalOptions="Fill">
                </TimePicker>

                <Label
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                FontSize="Medium"
                Text="Fin : " />

                <DatePicker
                Date="{Binding ReservationSearchDetails.EndDate}"
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                BackgroundColor="LightGreen"
                FontSize="Medium"
                HorizontalOptions="Center" />

                <TimePicker 
                Time="{Binding ReservationSearchDetails.EndTime}"
                Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                Margin="0,0,0,0"
                BackgroundColor="LightGreen"
                FontSize="Medium"
                HorizontalOptions="Fill">
                </TimePicker>

                <Label
                x:Name="VehicleTypeLabel"
                Grid.Row="2"
                Grid.RowSpan="1"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                FontSize="Medium"
                Text="Type de Véhicule : "
                VerticalTextAlignment="Center" />
                <Label
                x:Name="VehicleTypeLabeltest"
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                FontSize="Medium"
                Text="{Binding ReservationSearchDetails.StationId}"
                VerticalTextAlignment="Center" />
                <Picker
                x:Name="VehicleType"
                SelectedItem="{Binding ReservationSearchDetails.TypeVehicule}"
                Grid.Row="2"
                Grid.RowSpan="1"
                Grid.Column="4"
                Grid.ColumnSpan="3"
                Margin="0,5,0,0"
                BackgroundColor="LightGreen"
                FontSize="Medium"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center">
                    <Picker.Items>
                        <x:String>Auto</x:String>
                        <x:String>Moto</x:String>
                        <x:String>Vélo</x:String>
                    </Picker.Items>
                    <Picker.Behaviors>
                        <behaviors:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding OnVehicleTypeChangedCommand}"/>
                    </Picker.Behaviors>
                </Picker>
                <Label
                x:Name="StationLabel"
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                FontSize="Medium"
                Text="Station : "
                VerticalTextAlignment="Center" />
                <Picker
                x:Name="StationName"
                SelectedItem="{Binding ReservationSearchDetails.StationId}"
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="4"
                Grid.ColumnSpan="3"
                Margin="0,5,0,0"
                BackgroundColor="LightGreen"
                FontSize="Medium"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center">
                    <Picker.Items>
                        <x:String>Station 1</x:String>
                        <x:String>Station 2</x:String>
                        <x:String>Station 3</x:String>
                    </Picker.Items>
                </Picker>
            </Grid>
            <!--  Need to hide the Options section if not auto  -->
            <Grid
            x:Name="OptionsLayout"
            Margin="0,0,0,0"
            Padding="10"
            ColumnDefinitions="*,*,*,*,*,*,*,*"
            ColumnSpacing="1"
            IsVisible="{Binding IsAutoSelected}"
            RowDefinitions="*,*,*,*,*"
            RowSpacing="2">
                <Grid
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="8"
                Grid.RowSpan="1"
                x:Name="RadioButtons"
                ColumnDefinitions="*,*,*,*,*,*,*,Auto"
                RowDefinitions="*,Auto"
                ColumnSpacing="1"
                RowSpacing="2"
                Padding="10"
                Margin="0,0,0,0"
                RadioButtonGroup.GroupName="TypeVehicule" 
                RadioButtonGroup.SelectedValue="{Binding ReservationSearchDetails.CategorieAuto}">
                    <Label
                Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                FontSize="Medium"
                Text="Options : "/>
                    <RadioButton
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                x:Name="RadioButtGas"
                Content="À essence"
                Value="À essence">
                    </RadioButton>
                    <RadioButton
                Grid.Row="0"
                Grid.Column="4"
                Grid.ColumnSpan="3"
                x:Name="RadioButtElectric"
                Content="Électrique"
                Value="Électrique">
                    </RadioButton>
                </Grid>

                <Label
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                FontSize="Medium"
                Text="Selected : " />
                <!--Test label below to check Binding-->
                <Label
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="3"
                Grid.ColumnSpan="3"
                FontSize="Medium"
                Text="{Binding ReservationSearchDetails.CategorieAuto}" />

                <CheckBox
                x:Name="Mp3"
                IsChecked="{Binding IsCheckedMP3}"    
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="1"
                HorizontalOptions="End">
                </CheckBox>

                <Label
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Margin="10"
                HorizontalTextAlignment="Start"
                Text="Lecteur MP3" />
                <CheckBox
                x:Name="A_C"
                IsChecked="{Binding IsCheckedAC}"
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="1"
                HorizontalOptions="End" />
                <Label
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Margin="10"
                HorizontalTextAlignment="Start"
                Text="Air Climatisé" />
                <CheckBox
                x:Name="Gps"
                IsChecked="{Binding IsCheckedGPS}"
                Grid.Row="2"
                Grid.Column="4"
                Grid.ColumnSpan="1"
                HorizontalOptions="End" />
                <Label
                Grid.Row="2"
                Grid.Column="5"
                Grid.ColumnSpan="2"
                Margin="10"
                HorizontalTextAlignment="Start"
                Text="GPS" />
                <CheckBox
                x:Name="SiegeAuto"
                IsChecked="{Binding IsCheckedChildSeat}"
                Grid.Row="3"
                Grid.Column="4"
                Grid.ColumnSpan="1"
                HorizontalOptions="End" />
                <Label
                Grid.Row="3"
                Grid.Column="5"
                Grid.ColumnSpan="4"
                Margin="10"
                Text="Siège Enfant" />
            </Grid>
            <BoxView HeightRequest="1" Color="DarkGreen" HorizontalOptions="FillAndExpand" />
