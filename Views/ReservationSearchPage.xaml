                            HorizontalOptions="FillAndExpand"
                            ItemsSource="{Binding Vehicules}"
                            SelectionMode="Single">
 
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:ReservationSearch">
                        <VerticalStackLayout>
                            <HorizontalStackLayout Padding="10"
                                                   Spacing="10">
                                <Label Text="{Binding }"/>
