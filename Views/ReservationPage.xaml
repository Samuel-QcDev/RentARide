<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentARide.Views.ReservationPage"
             Title="Réservation">
    <Grid ColumnDefinitions="*,*,*,*,*"
          RowDefinitions="*,*,*,*,*"
          ColumnSpacing="5"
          RowSpacing="5"
          Padding="10">
        <Label 
            Text="Créer votre réservation"
            FontSize="Medium"
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            HorizontalTextAlignment="Center"/>

        
        
        
        

        <Button x:Name="Search"
                Text="Recherche"
                FontSize="Medium"
                CornerRadius="15"
                Grid.Row="5"
                Grid.Column="2"
                WidthRequest="200"
                SemanticProperties.Hint="Navigates to Results page"
                Clicked="Search_Clicked"/>

    </Grid>
</ContentPage>