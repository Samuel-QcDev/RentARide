<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentARide.Views.MainPage">

    <VerticalStackLayout Padding="10"
                         Spacing="10"
                         VerticalOptions="Center">

        <Image  Source="rentaride_logo.png"
                Aspect="AspectFit"
                />
        <Button x:Name="Reservation"
                Text="Faire une Réservation"
                WidthRequest="300"
                HeightRequest="100"
                Margin="20"
                SemanticProperties.Hint="Navigate to Create Reservation page"
                Clicked="CreateReservation_Clicked"/>
        
        <Button x:Name="Historique"
                Text="Consulter les Réservations"
                WidthRequest="300"
                HeightRequest="100"
                Margin="20"
                SemanticProperties.Hint="Navigates to Reservation history page"
                Clicked="History_Clicked"/>
    </VerticalStackLayout>

</ContentPage>
