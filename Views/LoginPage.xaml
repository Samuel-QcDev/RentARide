<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RentARide.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModel="clr-namespace:RentARide.ViewModel"
    Title="Login Page"
    x:DataType="viewModel:LoginViewModel">

    <VerticalStackLayout x:Name="LoginStackLayout" Margin="0,20,0,10">
        <HorizontalStackLayout WidthRequest="300">
            <Label
                FontSize="Medium"
                HorizontalOptions="Start"
                Text="Email Address : "
                VerticalOptions="Center"
                VerticalTextAlignment="Center" />
            <Entry
                HorizontalOptions="End"
                Placeholder="Email Address"
                Text="{Binding LoginDetails.EmailAddress}"
                WidthRequest="150" />
        </HorizontalStackLayout>
        <HorizontalStackLayout WidthRequest="300">
            <Label
                FontSize="Medium"
                HorizontalOptions="Start"
                Text="Password : "
                VerticalOptions="Center"
                VerticalTextAlignment="Center" />
            <Entry
                HorizontalOptions="End"
                IsPassword="True"
                Placeholder="Password"
                Text="{Binding LoginDetails.Password}"
                WidthRequest="150" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="10,10,10,0" HorizontalOptions="Center">
            <Button
                Margin="5"
                Command="{Binding SubmitCommand}"
                Text="Submit" />
            <Button
                Margin="5"
                Command="{Binding CreateAccountCommand}"
                Text="Create Account" />

        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="10,10,10,0" HorizontalOptions="Center">
            <Button
                Margin="5"
                Clicked="Forgot_Clicked"
                Text="Forgot Password" />

        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>